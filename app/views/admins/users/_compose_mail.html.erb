<%= form_with(url: admins_user_send_mail_path, remote: true) do | form | %>
<div class="card-body">
  <div class="form-group">
    <%= form.email_field :email, class: "form-control", value: email %>
  </div>
  <div class="form-group">
    <%= form.text_field :subject, class: "form-control", placeholder:"Subject:" %>
  </div>
  <div class="form-group">
    <%= form.text_area :description, id:"compose-textarea", class:"input form-control wysihtml5",rows:"5" %>
  </div>
  <div class="form-group">
    <div class="btn btn-default btn-file">
      <%= fa_icon "paperclip" %> Attachment
      <%= form.file_field :attachments, name:"attachment[]", multiple:true %>
    </div>
    <p class="help-block">Max. 32MB</p>
  </div>
</div>
<div class="card-footer">
  <div class="float-right">
    <button type="submit" class="btn btn-primary"><%= fa_icon "envelope" %> Send</button>
  </div>
  <button type="reset" class="btn btn-default"> <%= fa_icon "times" %>Discard</button>
</div>
<% end %>
