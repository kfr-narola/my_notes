$("#message_body").html("<%= j render 'show', messages: @messages %>");
<% if @user.class.name == "Admin" %>
  $("#message_header").html("<%= @user.username %>");
<% else %>
  $("#message_header").html("<%= @user.profile.username %>");
<% end %>
$("#id_of_receiver").val("<%= @user.id %>");
$("#message_footer").html("<%= j render 'form', url:messages_path(format: :js), message: @new_message %>");
