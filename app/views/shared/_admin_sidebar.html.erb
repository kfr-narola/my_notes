
  <aside class="main-sidebar sidebar-dark-primary elevation-4">
    <!-- Brand Logo -->
    <%= link_to admin_index_path, class:"brand-link" do %>
      <img src="dist/img/AdminLTELogo.png" alt="AdminLTE Logo" class="brand-image img-circle elevation-3"
           style="opacity: .8">
      <span class="brand-text font-weight-light">My Notes</span>
    <% end %>

    <!-- Sidebar -->
    <div class="sidebar">
      <!-- Sidebar user panel (optional) -->
      <div class="user-panel mt-3 pb-3 mb-3 d-flex">
        <div class="image">
          <img class="img-circle elevation-2" src="<%= Rails.application.routes.url_helpers.rails_blob_path(current_user.profile.avatar, only_path: true) %>" alt="">
        </div>
        <div class="info">
          <a href="#" class="d-block">  <%= current_user.profile.username %></a>
        </div>
      </div>

      <!-- Sidebar Menu -->
      <nav class="mt-2">
        <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
          <!-- Add icons to the links using the .nav-icon class
               with font-awesome or any other icon font library -->
          <li class="nav-item has-treeview menu-open">
            <ul class="nav nav-treeview">
              <li class="nav-item">
                <%= link_to admin_manage_users_path, class:"nav-link" do %>
                  <%= fa_icon "circle nav-icon" %> <p> Users</p>
                <% end %>
              </li>
            </ul>
            <ul class="nav nav-treeview">
              <li class="nav-item">
                <%= link_to admin_manage_notes_path, class:"nav-link" do %>
                  <%= fa_icon "circle nav-icon" %> <p> Notes</p>
                <% end %>
              </li>
            </ul>
          </li>
        </ul>
      </nav>
      <!-- /.sidebar-menu -->
    </div>
    <!-- /.sidebar -->
  </aside>
