<% content_for :body do %>
  <h2>Sign Up</h2>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <% resource.build_profile %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <div class="field">
      <%= f.label :email %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control", placeholder:"Enter Email Address" %>
    </div>

    <div class="field">
      <%= f.label :password %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %>
      <%= f.password_field :password, autocomplete: "new-password", class:"form-control", placeholder:"Enter Password" %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control", placeholder:"Enter Confirm Password" %>
    </div>

    <%= f.fields_for :profile do | frm | %>
      <div class="field">
        <%= frm.label :name %>
        <%= frm.text_field :username, autofocus: true, autocomplete: "email", class:"form-control", placeholder:"Enter Your Name" %>
      </div>

      <div class="field">
        <%= frm.label :phone %>
        <%= frm.number_field :phone, autofocus: true, autocomplete: "phone", class:"form-control", placeholder:"Enter Your Phone Number" %>
      </div>

      <div class="field">
        <%= frm.label :gender %><br/>
        <div class="form-check form-check-inline">
          <%= frm.radio_button :gender, "male", id:"male", class:"form-check-input" %>
          <label class="form-check-label" for="male">Male</label>
        </div>
        <div class="form-check form-check-inline">
          <%= frm.radio_button :gender, "female", id:"female", class:"form-check-input" %>
          <label class="form-check-label" for="female">Female</label>
        </div>
      </div>

      <div class="field">
        <%= frm.label :birthdate %>
        <%= frm.text_field:birthdate, class:"form-control datepicker", autofocus: true, autocomplete: "birthdate", placeholder:"Enter Your Phone Number" %>
      </div>

      <div class="actions">
        <%= f.submit "Sign up", class:"btn btn-primary" %>
      </div>
    <% end %>
  <% end %>
    <%= render "devise/shared/links" %>
<% end %>

<script type="text/javascript">
  $(document).ready(function(){
    $('.datepicker').datepicker();
  });
</script>
