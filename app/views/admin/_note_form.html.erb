<%= form_with(model: note, url: url, id:id, remote:true) do |form| %>
  <div class="field">
    <div class="input-group mb-2">
      <div class="input-group-prepend">
        <div class="input-group-text">Note Title</div>
      </div>
      <%= form.text_field :title, class:"input form-control", placeholder:"Enter the Title" %>
    </div>
  </div>

    <div class="field">
      <div class="input-group">
        <div class="input-group-prepend">
          <div class="input-group-text">Descripttion</div>
        </div>
        <div class="card">
          <%= form.text_area :description, as: :wysihtml5, class:"input form-control wysihtml5",rows:"5" %>
        </div>
      </div>
    </div>

      <div class="field">
        <div class="input-group mb-2">
          <div class="input-group-prepend">
            <div class="input-group-text">Tags</div>
          </div>
          <%= form.text_field :tag_list, class:"input form-control tokenize", id:"tokenfield", value:form.object.tag_list.to_s %>
        </div>
      </div>
      <div class="field" style="display:none;">
        Tags:
        <% if note.tag_list.count > 0 %>
          <% note.tags.each do | tag | %>
            <button type="button" class="btn btn-info btn-sm" name="button"><%= tag %> <span class="badge badge-light">&times;</span></button>
          <% end %>
        <% end %>
      </div>
  <hr>
  <div class="actions">
      <%= form.submit "Save", class: "btn btn-primary", style: "float:center;" %>
      <button type="button" name="button" class="btn btn-danger" data-dismiss="modal" aria-label="Close">
        close
      </button>
  </div>
<% end %>
